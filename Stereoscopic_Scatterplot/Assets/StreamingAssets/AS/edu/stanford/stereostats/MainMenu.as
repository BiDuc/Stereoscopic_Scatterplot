package edu.stanford.stereostats{	import flash.display.MovieClip;	import flash.display.DisplayObject;	import flash.events.*;	import edu.stanford.stereostats.MainMenu3D;	public class MainMenu extends MovieClip {		public var buttonsListeningForClicks:Vector.<DisplayObject > ;		public var ButtonMenu:MovieClip;		public var ButtonLine:MovieClip;		public var ButtonPoint:MovieClip;		public var ButtonData:MovieClip;		public var ButtonScatter:MovieClip;		public var ButtonPlane:MovieClip;		public var ButtonPlanar:MovieClip;		public var ButtonOptions:MovieClip;		public var ButtonRotate:MovieClip;		public var ButtonMinimize:MovieClip;		public var ButtonQuit:MovieClip;		public var stereoController:StereoController;		public function MainMenu() {			buttonsListeningForClicks = new Vector.<DisplayObject>();		}		public function init(stereoController):void {			trace("init " + this.name);			this.stereoController = stereoController;			addListenersToButtons();		}		public function addListenersToButtons():void {			for (var a:int = 0; a < this.numChildren; a++) {				var ish:DisplayObject = this.getChildAt(a);				//if (! ish.hasEventListener(MouseEvent.CLICK)) {				switch (ish.name) {					case "ButtonMenu" :						addClickListener(ish, clickMenu);						break;				}				//}			}		}		public function addClickListener(ish:DisplayObject, callback:Function):void {			ish.addEventListener(MouseEvent.CLICK, callback);			buttonsListeningForClicks.push(ish);		}		public function clickMenu(e:Event):void {			trace("clicked");			gotoScreen(2);		}		public function gotoScreen(newScreen:int):void {			stereoController.gotoScreen(newScreen);		}	}}